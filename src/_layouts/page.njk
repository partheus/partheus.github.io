---
layout: base.njk
---

<header class="irevamp-hero">
  <div class="irevamp-container slide-up">
    <h1 class="irevamp-ink--primary irevamp-mb-none bold600"><a class="nolink" href="{{ page.permalink }}">{{ title }}</a></h1>
    {% if description %}
    <h5 class="irevamp-content-maxlength irevamp-mt-sm irevamp-mx-auto irevamp-description">
     {{ description | safe }}
    </h5>
    {% endif %}
  </div>
</header>
<main class="irevamp-container slide-up">
  <article class="irevamp-mx-auto">
    {{ content | safe }}
  </article>
</main>
