<script>
  // Function to get the text content of the article
  function get_text(el) {
    var ret = "";
    for (var i = 0; i < el.childNodes.length; i++) {
      var node = el.childNodes[i];
      if (node.nodeType === 3) { // Text node
        ret += node.nodeValue;
      } else if (node.nodeType === 1 && node.tagName.toLowerCase() !== 'svg') { // Element node that is not an SVG
        ret += get_text(node);
      }
    }
    return ret;
  }

  // Main body in which all words exist
  var articleElement = document.querySelector('.article__body');
  var words = articleElement.textContent;

  var count = words.split(' ').length;

  // Average reading speed of a person is 200 words per minute
  var avg = 180;
  var counted = count / avg;
  var maincount = Math.ceil(counted);

  // Show output of code
  document.getElementById("time-to-read").innerHTML = " &#x2022; " + maincount + " minute read";
</script>

